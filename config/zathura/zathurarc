# User interface colors.
set default-bg   rgba(40,40,40,0.7)
set default-fg   #ebdbb2
set statusbar-bg #282828
set statusbar-fg #ebdbb2

# Change the color of the documents.
set recolor "true"
set recolor-keephue "true"
set recolor-darkcolor rgba(40,40,40,1)
set recolor-lightcolor rgba(235,219,178,1)

# Performance and miscellaneous
set render-loading "false"
set window-title-basename "true"
set selection-clipboard "clipboard"
