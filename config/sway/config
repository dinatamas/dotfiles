#
# Sway configuration file.
#
# Default example config file:
# https://github.com/swaywm/sway/blob/master/config.in
#

# Logo key.
set $mod Mod4

# Useful launchers.
bindsym $mod+d exec ~/.config/wofi/launch.sh
bindsym $mod+p exec ~/.config/wofi/power.sh
bindsym $mod+f exec ~/.config/wofi/focus.sh

# Disable "Loading..." symbol.
set $exec exec --no-startup-id
set $exec_always exec_always --no-startup-id

# Background image.
# This will launch:
# swaybg -o * -i /usr/share/backgrounds/dinatamas/misty_forest.jpg -m fill
output * bg /usr/share/backgrounds/dinatamas/misty_forest.jpg fill

# Keyboard input options.
input * {
    xkb_layout "hu"
    xkb_options "caps:ctrl_modifier"
}

# Touchpad (libinput) input options.
input "1267:12375:ELAN1300:00_04F3:3057_Touchpad" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# Start a terminal.
bindsym $mod+Return $exec alacritty
bindsym $mod+Shift+Return $exec terminator

# Kill focused window.
bindsym $mod+Shift+q kill

# Reload the configuration file.
bindsym $mod+Shift+r reload

# Move focus around.
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move the focused window with the same, but add Shift.
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10

# Change split direction.
bindsym $mod+h splith
bindsym $mod+v splitv

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+l layout toggle split

# Make the current focus fullscreen
bindsym $mod+Shift+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+Shift+space floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+space focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

# Sway has a "scratchpad", which is a bag of holding for windows.
# You can send windows there and get them back later.
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Resizing containers.
mode "resize" {
    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    # Return to default mode
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Brightness controls.
# https://danmc.net/posts/sway-backlight/
# https://wiki.archlinux.org/title/Backlight
bindsym XF86MonBrightnessUp $exec sudo light -A 10
bindsym XF86MonBrightnessDown $exec sudo light -U 10

# Audio controls.
bindsym XF86AudioRaiseVolume $exec pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume $exec pactl set-sink-volume 0 -5%
bindsym XF86AudioMute $exec pactl set-sink-mute 0 toggle
bindsym XF86AudioMicMute $exec pactl set-source-mute 0 toggle

# Power controls.
bindsym XF86PowerOff $exec ~/.config/wofi/power.sh

set $bg            #282828
set $bg-inactive   #1d2021
set $bg-urgent     #9d0006
set $text          #ebdbb2
set $text-inactive #a89984

set $bar           #323232
set $statusline    #e0e0e0

# Color scheme.
# border | background | text | indicator | child_border
client.focused          $text           $bg          $text        $text  $text
client.unfocused        $bg-inactive  $bg-inactive $text-inactive $bar $bar
client.focused_inactive $bg-inactive  $bg-inactive $text-inactive $bar $bar
client.urgent           $bg-urgent    $bg-urgent   $text          $bar $bar

# Status bar.
bar {
    position bottom

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    status_command while ~/.config/sway/status.sh; do sleep 1; done

    colors {
        statusline #ebdbb2
        background #282828
        focused_workspace  #282828 #ebdbb2 #282828
        active_workspace   #282828 #282828 #282828
        inactive_workspace #282828 #282828 #ebdbb2
    }
}

# Set font.
font pango:Source Code Pro Medium 11

# No borders, just gaps.
gaps inner 15
gaps outer 15
# smart_gaps on
#for_window [class=".*"] border pixel 0
#for_window [app_id=".*"] border pixel 0
default_border none
#default_floating_border none
#for_window [instance=__focused__] border pixel 30
#default_border pixel 8
for_window [app_id="Alacritty"] border pixel 8
for_window [app_id="terminator"] border pixel 8

# Screenlock utility script.
bindsym $mod+x $exec bash ~/.config/sway/lock.sh

# wofi-style selector for open windows.
# bindsym Mod1+Tab $exec ~/.config/sway/select-window.sh
# TODO: Consider using a wofi-style opener for firefox tabs?
# There was a unixporn entry somewhere related to that.

default_orientation vertical

# Proper flameshot support.
# https://github.com/flameshot-org/flameshot/blob/master/docs/Sway%20and%20wlroots%20support.md
$exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
$exec hash dbus-update-activation-environment 2>/dev/null && \
     dbus-update-activation-environment \
     --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

# This seems to be important.
include /etc/sway/config.d/*
